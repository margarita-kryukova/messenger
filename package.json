{
  "name": "messenger-app",
  "version": "1.0.0",
  "description": "Мессенджер с клиентом и сервером",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm run dev",
    "install-all": "cd server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
